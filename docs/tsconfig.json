{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsxImportSource": "solid-js",
    "jsx": "preserve",
		"allowJs": true,
		"strict": true,
		"noEmit": true,
		"types": ["vinxi/client"],
		"isolatedModules": true,
		"paths": {
      "~/*": ["./src/*"]
    }
  }
}
